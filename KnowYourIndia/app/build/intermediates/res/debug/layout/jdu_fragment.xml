        android:layout_marginTop="14dp"
        android:text="Ideology: Integral humanism, Secularism, Socialism
\nPolitical Position: Centre Left
\nECI Status: State Party
\n
\nSecretary-General: K.C. Tyagi
\n
\nLeader in Lok Sabha: Sharad Yadav
\nLeader in Rajya Sabha: Shivanand Tiwari
\nSeats in Lok Sabha: 20/545
\nSeats in Rajya Sabha: 9/245
" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="18dp"
        android:text="Headquarters at: Patna, Bihar" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textView1"
        android:src="@drawable/jdu" />

